function calender_year($conn){
    $sql="SELECT * FROM get_calender_yr";
    $result = $conn->query($sql);
    while($row = $result->fetch_assoc()){
        echo "<option value='".$row['c_year']."'>".$row['c_year']."</option>";
    }
}

